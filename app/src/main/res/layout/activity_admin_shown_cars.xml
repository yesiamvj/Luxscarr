<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_admin_shown_cars"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ulgebra.luxscarr.AdminShownCars">
    <ScrollView style="@style/mama">
        <LinearLayout android:orientation="vertical" android:paddingBottom="10.0dip" style="@style/mpwc">

            <LinearLayout style="@style/mpwc">
                <TextView android:id="@+id/BrowseCarsDateText" android:text="Cars shown to Users" style="@style/browse_car_dateText" />
            </LinearLayout>
            <LinearLayout style="@style/mpwc">
                <TextView android:paddingLeft="18.0dip" android:paddingTop="10.0dip" android:text="Select a Car from the List to View" style="@style/mpwc" />
            </LinearLayout>
            <LinearLayout style="@style/singleCar_container">
                <LinearLayout android:orientation="vertical" android:background="#ffffffff" android:onClick="goToSingleCarDetail" style="@style/mpwc">
                    <TextView android:text="Audi VB Tuning" style="@style/browse_car_name" />
                    <TextView android:text="Rs.1000 / day" style="@style/browse_car_price" />
                    <ImageView android:src="@drawable/sample_car" style="@style/browse_car_image" />
                </LinearLayout>
                <Button android:text="Hide Car" android:background="#b10000" android:onClick="goToConfirmBooking" style="@style/browse_car_selectBtn" />
            </LinearLayout>
            <LinearLayout style="@style/singleCar_container">
                <LinearLayout android:orientation="vertical" android:background="#ffffffff" style="@style/mpwc">
                    <TextView android:text="Audi VB Tuning" style="@style/browse_car_name" />
                    <TextView android:text="Rs.1000 / day" style="@style/browse_car_price" />
                    <ImageView android:src="@drawable/sample_car" style="@style/browse_car_image" />
                </LinearLayout>
                <Button android:text="Hide Car" android:background="#b10000" style="@style/browse_car_selectBtn" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
