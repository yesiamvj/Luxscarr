<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_otp_registration"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ulgebra.luxscarr.otpRegistration">
    <ScrollView style="@style/mama" >
        <LinearLayout style="@style/mpwc"
            android:orientation="vertical">
            <LinearLayout style="@style/topTitleBar"
                android:layout_marginTop="0dp">

                <TextView
                    style="@style/topTitleText"
                    android:text="Registration"
                    />
                <Button style="@style/topTitleShadow" />

            </LinearLayout>
            <LinearLayout style="@style/mpwc"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                android:background="#ffffff"
                >

                <TextView
                    style="@style/mpwc"
                    android:text="Provide OTP"
                    android:paddingTop="16dp"
                    android:paddingLeft="18dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textSize="20dp"
                    android:textColor="#ffb300"
                    android:background="#ffffff"/>
                <TextView
                    style="@style/mpwc"
                    android:text="Type One Time Password received on your Mobile"
                    android:paddingTop="16dp"
                    android:paddingLeft="18dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textSize="16dp"
                    android:textColor="@android:color/darker_gray"
                    android:background="#ffffff"/>

            </LinearLayout>
            <LinearLayout
                style="@style/mpwc"
                android:orientation="vertical"
                android:paddingTop="25dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="#ffffff"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:paddingBottom="15dp"
                >
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        style="@style/mpwc"
                        android:id="@+id/reg_otp"
                        android:hint="OTP"
                        android:paddingLeft="10dp"
                        android:inputType="number"
                        android:maxLines="1"
                        android:gravity="center"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>




                <Button
                    android:id="@+id/otp_reg_con"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirm"
                    android:layout_marginBottom="10dp"
                    android:background="#FF00ACC1"
                    android:textColor="#ffffff"
                    android:textSize="17dp"
                    android:layout_marginTop="20dp"

                    />
                <Button
                    android:id="@+id/resend_otp_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Resend OTP     "
                    android:layout_marginBottom="10dp"
                    android:background="#00ffffff"
                    android:textColor="#bf360c"
                    android:textSize="17dp"
                    android:layout_marginTop="15dp"
                    android:gravity="end|center"
                    android:textAllCaps="false"
                    />


            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
