<?xml version='1.0' encoding='utf-8' ?>
<android.support.constraint.ConstraintLayout tools:context=".SingleBookingDetails"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_booking_details"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView style="@style/mama">
        <LinearLayout android:orientation="vertical" android:paddingBottom="10.0dip" style="@style/mpwc">
            <LinearLayout android:orientation="vertical" android:layout_marginTop="0.0dip" style="@style/topTitleBar">
                <TextView android:textSize="20.0dip" android:textColor="@color/colorPrimary" android:text="My Account" style="@style/topTitleText" />
                <Button style="@style/topTitleShadow" />
            </LinearLayout>
            <LinearLayout style="@style/mpwc">
                <TextView android:id="@+id/bookingHeaderDets" android:paddingLeft="18.0dip" android:paddingTop="5.0dip" android:paddingBottom="10.0dip" android:text="@string/gladTohave" style="@style/mpwc" />
            </LinearLayout>
            <LinearLayout style="@style/mpwcvw">
                <LinearLayout style="@style/mpwcvw">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="125dp"
                        android:src="@drawable/luxscarico"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"/>
                    <TextView android:text="Name" style="@style/confirmBooking_QueText" />
                    <TextView
                        android:id="@+id/ride_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lo"
                        android:paddingLeft="22dp"
                        android:textSize="23dp"
                        android:textColor="#f57c00"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp"
                        ></TextView>
                    <TextView android:text="Mobile" style="@style/confirmBooking_QueText" />
                    <TextView
                        android:id="@+id/usermob"
                        android:text="@string/lo"
                        style="@style/confirmBooking_AnsText"
                        />

                    <TextView android:text="Email" style="@style/confirmBooking_QueText" />
                    <TextView
                        android:id="@+id/usermail"
                        android:text="@string/lo" style="@style/confirmBooking_AnsText" />

                    <TextView android:text="Licence No" style="@style/confirmBooking_QueText" />
                    <TextView
                        android:id="@+id/userlic"
                        android:text="@string/lo" style="@style/confirmBooking_AnsText" />

                    <TextView android:text="Total Bookings" style="@style/confirmBooking_QueText" />
                    <TextView
                        android:id="@+id/ride_totBook"

                        android:text="@string/lo" style="@style/confirmBooking_AnsText" />

                    <TextView android:text="Discount Balance" style="@style/confirmBooking_QueText" />
                    <TextView
                        android:id="@+id/offerBalance"
                        android:text="@string/lo" style="@style/confirmBooking_AnsText" />
                    <TextView
                        style="@style/mpwc"
                        android:paddingLeft="25dp"
                        android:paddingRight="20dp"
                        android:text="*Discount amount earned by referring the app will be used in Booking Payment"/>

                    <Button
                        android:id="@+id/referDtl_btn"
                        android:background="#f5f5f5"
                        android:textColor="#000000"
                        android:text="My Referrals" style="@style/carDetilEndBtn" />



                    <TextView android:text="Registered On" style="@style/confirmBooking_QueText" />
                    <TextView
                        android:id="@+id/ride_regDate"
                        android:layout_marginBottom="30dp"
                        android:text="0" style="@style/confirmBooking_AnsText" />

                    <Button
                        android:id="@+id/logOut_btn"
                        android:background="#b71c1c"
                        android:text="Log Out" style="@style/carDetilEndBtn" />


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>
