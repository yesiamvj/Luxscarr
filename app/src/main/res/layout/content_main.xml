<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ulgebra.getscar.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView style="@style/mama" >
        <LinearLayout style="@style/mpwc"
            android:orientation="vertical">
            <LinearLayout style="@style/topTitleBar"
                android:layout_marginTop="0dp"
                android:paddingTop="55dp">

                <TextView
                    style="@style/topTitleText"
                    android:text="Registration"

                    />
                <Button style="@style/topTitleShadow" />

            </LinearLayout>
            <LinearLayout style="@style/mpwc"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"

                >

                <TextView
                    style="@style/mpwc"
                    android:text="@string/weltoap"
                    android:paddingTop="16dp"
                    android:paddingLeft="18dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:textSize="18dp"
                    android:textColor="@android:color/darker_gray"
                    android:background="#ffffff"/>
            </LinearLayout>
            <LinearLayout
                style="@style/mpwc"
                android:orientation="vertical"
                android:paddingTop="15dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="#ffffff"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"
                android:paddingBottom="15dp"
                >
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        style="@style/mpwc"
                        android:id="@+id/reg_username"
                        android:hint="Username"
                        android:paddingLeft="10dp"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        style="@style/mpwc"
                        android:id="@+id/reg_email"
                        android:hint="Email"
                        android:paddingLeft="10dp"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        style="@style/mpwc"
                        android:id="@+id/reg_mobile"
                        android:hint="Mobile No"
                        android:paddingLeft="10dp"
                        android:inputType="number"
                        android:maxLines="1"

                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        style="@style/mpwc"
                        android:id="@+id/reg_licence_no"
                        android:hint="Licence No"
                        android:paddingLeft="10dp"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        style="@style/mpwc"
                        android:id="@+id/reg_password"
                        android:hint="Password"
                        android:paddingLeft="10dp"
                        android:inputType="textPassword"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <AutoCompleteTextView
                        style="@style/mpwc"
                        android:id="@+id/ref_number"
                        android:textColor="#2e7d32"
                        android:hint="Reference Mobile No (if any) "
                        android:paddingLeft="10dp"
                        android:inputType="number"
                        android:maxLines="1"
                        android:singleLine="true" />

                </android.support.design.widget.TextInputLayout>
                <TextView style="@style/mpwc"
                    android:paddingLeft="20dp"
                    android:layout_marginTop="10dp"
                    android:text="*by referal number both of you get discount"
                    />
                <Button
                    android:id="@+id/signup_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:layout_marginBottom="10dp"
                    android:background="#FF00ACC1"
                    android:textColor="#ffffff"
                    android:textSize="17dp"
                    android:layout_marginTop="20dp"
                    android:onClick="goToOTP"
                    />
                <TextView
                   style="@style/mpwc"
                    android:text="Or"
                    android:gravity="center"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:layout_marginTop="25dp"
                    android:layout_marginBottom="10dp"/>
                <Button
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Login"
                    android:layout_marginBottom="10dp"
                    android:background="#00ffffff"
                    android:textColor="#0d95cf"
                    android:textSize="17dp"
                    android:layout_marginTop="15dp"
                    android:onClick="goToLogin"
                    />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>





</LinearLayout>
